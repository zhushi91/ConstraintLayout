<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!--charter_line-->
        <com.geometry.constraintlayout.lib.CharterLine
            android:id="@+id/charter_line"
            android:layout_width="fill_parent"
            android:layout_height="100dp"/>

        <!--charter_bar-->
        <com.geometry.constraintlayout.lib.CharterBar
            android:id="@+id/charter_bar"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"/>

        <!--charter_bar_no_margin-->
        <com.geometry.constraintlayout.lib.CharterBar
            android:id="@+id/charter_bar_no_margin"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"/>

        <!--charter_line_XLabel-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <com.geometry.constraintlayout.lib.CharterLine
                android:id="@+id/charter_line_with_XLabel"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <com.geometry.constraintlayout.lib.CharterXLabels
                android:id="@+id/charter_line_XLabel"
                android:layout_width="fill_parent"
                android:layout_height="20dp"/>
        </LinearLayout>

        <!--charter_bar_XLabel-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <com.geometry.constraintlayout.lib.CharterBar
                android:id="@+id/charter_bar_with_XLabel"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <com.geometry.constraintlayout.lib.CharterXLabels
                android:id="@+id/charter_bar_XLabel"
                android:layout_width="fill_parent"
                android:layout_height="20dp"/>
        </LinearLayout>

        <!--charter_line_YLabel-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <com.geometry.constraintlayout.lib.CharterYLabels
                android:id="@+id/charter_line_YLabel"
                android:layout_width="20dp"
                android:layout_height="100dp"/>

            <com.geometry.constraintlayout.lib.CharterLine
                android:id="@+id/charter_line_with_YLabel"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>
        </LinearLayout>

        <!--charter_bar_YLabel-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <com.geometry.constraintlayout.lib.CharterYLabels
                android:id="@+id/charter_bar_YLabel"
                android:layout_width="20dp"
                android:layout_height="100dp"/>

            <com.geometry.constraintlayout.lib.CharterBar
                android:id="@+id/charter_bar_with_YLabel"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>
        </LinearLayout>

        <!--charter_line_XMarker-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <com.geometry.constraintlayout.lib.CharterLine
                android:id="@+id/charter_line_with_XMarker"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <com.geometry.constraintlayout.lib.CharterXMarkers
                android:id="@+id/charter_line_XMarker"
                android:layout_width="fill_parent"
                android:layout_height="20dp"/>
        </LinearLayout>

        <!--charter_bar_XMarker-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <com.geometry.constraintlayout.lib.CharterBar
                android:id="@+id/charter_bar_with_XMarker"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <com.geometry.constraintlayout.lib.CharterXMarkers
                android:id="@+id/charter_bar_XMarker"
                android:layout_width="fill_parent"
                android:layout_height="20dp"/>
        </LinearLayout>

        <!--charter_line_YMarker-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <com.geometry.constraintlayout.lib.CharterYMarkers
                android:id="@+id/charter_line_YMarker"
                android:layout_width="20dp"
                android:layout_height="100dp"/>

            <com.geometry.constraintlayout.lib.CharterLine
                android:id="@+id/charter_line_with_YMarker"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>
        </LinearLayout>

        <!--charter_bar_YMarker-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <com.geometry.constraintlayout.lib.CharterYMarkers
                android:id="@+id/charter_bar_YMarker"
                android:layout_width="20dp"
                android:layout_height="100dp"/>

            <com.geometry.constraintlayout.lib.CharterBar
                android:id="@+id/charter_bar_with_YMarker"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>